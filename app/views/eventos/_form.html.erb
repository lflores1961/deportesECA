<div class="bg-2">
  <%= form_for(@evento) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="field-tm">
      <%= f.label :fecha %>
      <%= f.date_field :fecha, :placeholder => "Fecha del evento" %>
    </div>
    <div class="field-tm">
      <%= f.label :tipoEvento %>
      <%= f.select :tipoEvento, @tiposEvento, :placeholder => "Entrenamiento o Juego" %>
    </div>
    <div class="field-tm">
      <%= f.label :equipo_id %>
      <%= f.collection_select( :equipo_id, @equipos, :id, :name, :placeholder => "Equipo que tendrÃ¡ el evento") %>
    </div>

    <div class="field-tm">
      <%= f.label :comment %>
      <%= f.text_field :comment, :placeholder => "Comentario" %>
    </div>

    <%= f.submit "Guardar", class: "btn btn-default" %>
  <% end %>
</div>
