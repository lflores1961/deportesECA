<div class="bg-2">
  <%= form_for(@evento) do |f| %>
    <% if @evento.errors.any? %>
      <div id="error_explanation">
        <h4><%= pluralize(@evento.errors.count, "errores") %> impidieron que el evento se guarde:</h4>
        <ul>
          <% @evento.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field-tm">
      <%= f.label :fecha %>
      <%= f.date_field :fecha, :placeholder => "Fecha del evento" %>
    </div>
    <div class="field-tm">
      <%= f.label :tipo %>
      <%= f.select :tipo, @tipoEvento, :placeholder => "Entrenamiento o Juego" %>
    </div>
    <div class="field-tm">
      <%= f.label :equipo_id %>
      <%= f.collection_select( :equipo_id, @equipos, :id, :name, :placeholder => "Equipo que tendrÃ¡ el evento") %>
    </div>

    <div class="field-tm">
      <%= f.label :comment %>
      <%= f.text_field :comment, :placeholder => "Comentario" %>
    </div>

    <%= f.submit "Guardar", class: "btn btn-default" %>
  <% end %>
</div>
