<div class="col-sm-6 col-sm-offset-3">
  <%= form_for(@evento) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div>
      <%= f.label :fecha %>
      <%= f.date_field :fecha, :placeholder => "Fecha del evento", class: 'form-control' %>
    </div>
    <div>
      <%= f.label :tipoEvento %>
      <%= f.select :tipoEvento, @tiposEvento, :placeholder => "Entrenamiento o Juego",
                      class: 'form-control'%>
    </div>
    <div>
      <%= f.label :equipo_id %>
      <%= f.collection_select( :equipo_id, @equipos, :id, :name,
                  :placeholder => "Equipo que tendrÃ¡ el evento", class: 'form-control') %>
    </div>

    <div>
      <%= f.label :comment %>
      <%= f.text_field :comment, :placeholder => "Comentario", class: 'form-control' %>
    </div>

    <%= f.submit "Guardar", class: "btn btn-default" %>
  <% end %>
</div>
