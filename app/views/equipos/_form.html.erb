<div class="bg-2">
  <%= form_for(@equipo) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>

    <div class="field-tm">
      <%= f.label :name, "Equipo" %>
      <%= f.text_field :name, :placeholder => "Nombre del equipo" %>
    </div>
    <div class="field-tm">
      <%= f.label :categoria %>
      <%= f.collection_select( :categoria, @categorias, :id, :nombre, :placeholder => "CategorÃ­a del equipo") %>
    </div>
    <div class="field-tm">
      <%= f.label :deporte %>
      <%= f.select :deporte, @deportes, :placeholder => "Deporte que practica el equipo" %>
    </div>
    <div class="field-tm">
      <%= f.label :rama %>
      <%= f.select :rama, @ramas, :placeholder => "Rama del equipo" %>
    </div>
    <div class="field-tm">
      <%= f.label :user_id, "Entrenador" %>
      <%= f.collection_select( :user_id, @usuarios, :id, :name, :placeholder => "Entrenador del equipo") %>
    </div>

    <%= f.submit "Guardar", class: "btn btn-default" %>
  <% end %>
</div>
