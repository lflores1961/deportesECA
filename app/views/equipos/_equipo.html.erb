<tr id="equipo-<%= equipo.id %>">
  <td class="equipo"><%= link_to equipo.name, equipo %></td>
  <td class="eq-categoria"><%= Categoria.find_by(id: equipo.categoria).nombre %></td>
  <td class="eq-deporte"><%= equipo.deporte %></td>
  <td class="eq-rama"><%= equipo.rama %></td>
  <td class="eq-entrenador"><%= equipo.user.name %></td>
  <td><%= link_to '', edit_equipo_path(equipo), class: "glyphicon glyphicon-edit" %></td>
  <td><%= link_to '', equipo, class: "glyphicon glyphicon-trash", method: :delete,
      data: { confirm: '¿Está seguro?' } %></td>
</tr>
