<tr id="equipo-<%= equipo.id %>">
  <% if equipo.id != 1 %>
    <td class="col-left"><%= link_to equipo.name, equipo %></td>
    <td class="col-left"><%= Categoria.find(equipo.categoria).nombre %></td>
    <td class="col-left"><%= Deporte.find(equipo.deporte).nombre %></td>
    <td class="col-left"><%= equipo.rama %></td>
    <td class="col-left"><%= equipo.user.name %></td>
    <td><%= link_to '', edit_equipo_path(equipo), class: "glyphicon glyphicon-edit" %></td>
    <td><%= link_to '', equipo, class: "glyphicon glyphicon-trash", method: :delete,
        data: { confirm: '¿Está seguro?' } %></td>
  <% end %>
</tr>
