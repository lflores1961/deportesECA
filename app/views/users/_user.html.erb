<li>
  <% if user.id != 1 %>
    <div class="main-user-row">
      <%= gravatar_for user, size: 50 %>
      <%= link_to user.name, user %>
      <% if current_user.admin? && !current_user?(user) %>
        -> Admin
        |  <%= link_to "", edit_user_path(user), class: "glyphicon glyphicon-edit" %>
        | <%= link_to "", user, class: "glyphicon glyphicon-trash", method: :delete, data: { confirm: "¿Seguro?" } %>
      <% end %>
    </div>
    <div class="second-user-line">
      <p>Email: <%= user.email %></p>
      <p>Teléfono: <%= user.phone %></p>
    </div>
    <div class="third-user-line">
      Equipos:
      <% user.equipos.each do |equipo| %>
        | <%= link_to equipo.name, equipo %>
      <% end %>
    </div>
  <% end %>
</li>
