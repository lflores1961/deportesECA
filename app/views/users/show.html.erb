<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-sm-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user, size: 60 %>
        <%= @user.name %>
      </h1>
      <%= @user.email %>
      <div>
        <p>Equipos:</p>
        <ul>
          <% @user.equipos.each do |e| %>
            <li><%= link_to e.name, e %></li>
          <% end %>
        </ul>
        (haga click para ver detalles del equipo)
      </div>

    </section>
  </aside>

</div>
