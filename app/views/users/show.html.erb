<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-sm-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user, size: 60 %>
        <%= @user.name %>
      </h1>
      <%= @user.email %>
      Equipos:
      <% @user.equipos.each do |equipo| %>
        | <%= link_to equipo.name, equipo %>
      <% end %>
    </section>
  </aside>
  <div class="col-sm-8">
    <%= yield %>
  </div>
</div>
