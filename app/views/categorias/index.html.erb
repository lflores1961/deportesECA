<% provide(:title, 'Listado de categorías') %>

<div class="row">
  <h1>Listado de categorías</h1>

  <%= link_to 'Crear categoría', new_categoria_path, class: "btn btn-default" %>

  <%= will_paginate %>


  <table>
    <thead>
      <tr>
        <th>Categoría</th>
        <th>Fecha Nac. Inf.</th>
        <th>Fecha Nac. Sup.</th>
        <th colspan="3">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <%= render @categorias %>
    </tbody>
  </table>
  <p>
    Exportar 
    <%= link_to "CSV", categorias_path(format: "csv") %> |
    <%= link_to "Excel", categorias_path(format: "xls") %>
  </p>
  <%= will_paginate %>

  <span class="navbar-left">
    <h4>Importar categorías (CSV)</h4>

    <%= form_tag import_categorias_path, multipart: true, class: "navbar-form navbar-left search-form" do %>
      <%= file_field_tag :file, class: "form-control" %>
      <%= submit_tag "Importar", class: "btn btn-default" %>
    <% end %>
  </span>
</div>
