<% provide(:title, 'Listado de categorías') %>
<h1>Listado de categorías</h1>

<%= link_to 'Crear categoría', new_categoria_path, class: "btn btn-default" %>

<%= will_paginate %>


<table>
  <thead>
    <tr>
      <th>Categoría</th>
      <th>Fecha Nac. Inf.</th>
      <th>Fecha Nac. Sup.</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <%= render @categorias %>
  </tbody>
</table>
<p>
  <%= link_to "CSV", categorias_path(format: "csv") %> |
  <%= link_to "Excel", categorias_path(format: "xls") %>
</p>
<%= will_paginate %>
