<% provide(:title, 'Listado de jugadores') %>
<h1>Listado de Jugadores</h1>

<%= link_to 'Dar de alta jugador', new_player_path, class: "btn btn-default" %>

<%= will_paginate %>

<table>
  <thead>
    <tr>
      <th>Nombres</th>
      <th>Apellido paterno</th>
      <th>Apellido materno</th>
      <th>Equipo</th>
      <th>Deporte</th>
      <th>Entrenador</th>
      <th colspan="3">Acciones</th>
    </tr>
  </thead>
  <tbody>
    <%= render @players %>
  </tbody>
</table>
<p>
  <%= link_to "CSV", players_path(format: "csv") %> |
  <%= link_to "Excel", players_path(format: "xls") %>
</p>
<%= will_paginate %>
