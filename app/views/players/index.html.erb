<% provide(:title, 'Listado de jugadores') %>

<div class="row">
  <h1>Listado de Jugadores</h1>

  <%= link_to 'Dar de alta jugador', new_player_path, class: "btn btn-default" %>

  <%= will_paginate %>

  <table>
    <thead>
      <tr>
        <th>Nombres</th>
        <th>Apellido paterno</th>
        <th>Apellido materno</th>
        <th>Equipo</th>
        <th>Deporte</th>
        <th>Entrenador</th>
        <% if current_user.admin? %>
          <th>Beca</th>
          <th colspan="3">Acciones</th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <%= render @players %>
    </tbody>
  </table>
  <p>
    <%= link_to "CSV", players_path(format: "csv") %> |
    <%= link_to "Excel", players_path(format: "xls") %>
  </p>
  <%= will_paginate %>
  <span class="navbar-left">
    <h4>Importar listado de jugadores (CSV)</h4>

    <%= form_tag import_players_path, multipart: true, class: "navbar-form navbar-left search-form" do %>
      <%= file_field_tag :file, class: "form-control" %>
      <%= submit_tag "Importar jugadores", class: "btn btn-default" %>
    <% end %>
  </span>
</div>
