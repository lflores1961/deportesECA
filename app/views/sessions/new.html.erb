<%= provide(:title, "Iniciar sesión") %>
<h1>Iniciar sesión</h1>
<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, class: 'form-control' %>

      <%= f.label :password %>
      <%= link_to "(¿olvido su password?)", new_password_reset_path %>
      <%= f.password_field :password, class: 'form-control' %>

      <%= f.label :remember_me, class: "checkbox inline" do %>
        <%= f.check_box :remember_me %>
        <span>Recordar mi cuenta en esta computadora</span>
      <% end %>

      <%= f.submit "Iniciar sesión", class: "btn btn-primary" %>
    <% end %>

    <p>¿Usuario nuevo? <%= link_to "¡Regístrese!", acceso_path %></p>
  </div>
</div>
